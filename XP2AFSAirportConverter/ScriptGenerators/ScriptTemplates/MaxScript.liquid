--Set units to meters. 1 unit = 1 meter
units.DisplayType = #Metric
units.MetricType = #meters
units.SystemType = #meters
units.SystemScale = 1

-- Draw runways
{% assign i = 1 %}
{% for runway in runways -%}
	macros.run "Objects Shapes" "Rectangle"
	Rectangle length:{{runway.length}} width:{{runway.width}} cornerRadius:0 pos:[0,0,0] isSelected:on
	$.name = "Runway{{i}}"
	select $Runway{{i}}
	toolMode.coordsys #view
	rotate $ (angleaxis {{runway.angle}} [0,0,1])

	$.pos.x = {{runway.X}}
	$.pos.y = {{runway.Y}}

	{% assign i = i | plus:1 %}
{% endfor -%}

-- Draw pavements
{% for pavement in pavements -%}

newSpline = SplineShape pos:[10,20,0]
addNewSpline newSpline

{% for node in pavement.nodes -%}
addKnot newSpline 1 #corner #line [{{node.x}},{{node.y}},0]
{% endfor -%}

updateShape newSpline
newSpline.name = {{pavement.name}}
{% endfor -%}


